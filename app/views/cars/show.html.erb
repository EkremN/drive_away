<div class="container">
<div class="car-container-top">
  <div>
    <p><%= link_to "< Back to car list", cars_path %></p>
    <h2 class="text-inline"><%= @car.title %></h2>
    <span><%= @car.average_rating %></span>⭐
    <p><% if policy(@car).edit? %>
    <%= link_to "Edit", edit_car_path %>
    <% end %>
    <% if policy(@car).destroy? %> |
    <%= link_to "Delete", car_path(@car),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    <% end %></p>
    <%= cl_image_tag @car.photo, height: 500, width: 550, crop: :fill %>
    <p><%= @car.address %></p>
  </div>
  <div class="car-container-booking">
    <%= link_to "Book this car", new_car_booking_path(@car),class: "btn btn-gradient" %>
    <h2><%= @car.price %> £ / day</h2>

    <div class="container">
      <div class="row">
        <div class="col-sm-8 offset-sm-2">

          <% if !@bookings.nil? %>
            <%= month_calendar events: [@bookings] do |date, bookings| %>
              <%= date.to_formatted_s(:short) %>

              <% bookings.each do |bookings| %>
                <div>
                  <%= @car.title %>
                </div>
              <% end %>
            <% end %>

          <% else %>
            <%= month_calendar do |date| %>
              <%= date.to_formatted_s(:short) %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

  <div class="middle-container">
    <div>
      <h4><%= @car.brand %> - <%= @car.model %>, <%= @car.year %></h4>
    </div>
      <hr>
    <div class="description-container">
      <h4>Description</h4>
      <p><%= @car.description %></p>
    </div>
  </div>
    <hr>
  <div class="bottom-container">
    Time & Day: <%= Time.current.to_formatted_s(:time) %>
    <%=Date.today.strftime("%a, %e %b %Y") %>
    <p><%= link_to "Add a review", new_car_review_path(@car) %></p>
  </div>

</div>


  <div class="container container-bottom">
    <h2>Reviews & Comments</h2>
      <% @car.reviews.each do |review| %>
        <div class="review-container">
          <div class="review-rating">
            <%= review.rating %>
          </div>
          <div class="review-content">
            "<%= review.content %>"
          </div>
        </div>
      <% end %>
  </div>


