<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://www.mldavisinsurance.com/wp-content/uploads/2015/08/Classic-Car.jpg);">
  <div class="container">
    <h1><strong>Book it and drive it!</strong></h1>
    <div class="banner-content">
      <input type="text" placeholder="Location...">
      <i class="ico-search mr-1 inline-block md:mr-1 xs:mr-0"></i>
      <button type="button" name="button" class="search-btn btn-green text-center w-1/5 rounded-r-full lg:pl-0 lg:pr-1">Search</button>
    </div>
  </div>
</div>

<div class="container">
  <div class="row" style="width:100%">
    <% @cars.each do |car| %>
      <div class="col-sm-3">
        <%= car.brand %>
        <%= car.model %>
        <div class="card-category">
          <img class="card-image" src="<%= car.photo %>" alt="">
        </div>
        <%= car.city%>
        <br>
        <%= car.price %>
      </div>
    <% end %>
  </div>
</div>
<h1><%= link_to "List a new car", new_car_path, class: "btn btn-primary btn-lg" %></h1>
